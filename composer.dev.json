{
  "name": "hershel-theodore-layton/lecof-router",
  "description": "A request router for Hack and HHVM without a build step.",
  "license": "MIT",
  "require": {
    "hhvm": "^4.102",
    "hershel-theodore-layton/lecof-router-interfaces": "^1.0-RC1"
  },
  "require-dev": {
    "hhvm/hhvm-autoload": "^3.2",
