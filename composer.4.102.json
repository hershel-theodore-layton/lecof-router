{
  "name": "hershel-theodore-layton/lecof-router",
  "description": "A request router for Hack and HHVM without a build step.",
  "license": "MIT",
  "require": {
    "hhvm": "^4.102",
    "hershel-theodore-layton/lecof-router-interfaces": "^1.0-RC1",
    "hershel-theodore-layton/pragma": "<1"
  },
  "require-dev": {
    "hhvm/hhvm-autoload": "^3.2",
    "hhvm/hsl-experimental": "^4",
    "hershel-theodore-layton/test-chain": "<1",
    "hershel-theodore-layton/expect": "<1"
  },
  "scripts": {
    "post-install-cmd": [".github/workflows/prepare-environment.sh"],
    "post-update-cmd": [".github/workflows/prepare-environment.sh"]
  },
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  }
}
